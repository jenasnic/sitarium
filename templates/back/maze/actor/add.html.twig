{#
Allows to add new actor using TMDB API.
#}

{% extends "admin.html.twig" %}

{% block body %}

    <h1 class="title">Ajout d'un acteur</h1>

    <div id="maze-item-add" class="field has-addons" data-base-url="/admin/maze/actor/search/">
        <div class="control">
            <input id="maze-item-add-search" type="text" class="input" placeholder="Saisissez le nom de l'acteur" />
        </div>
        <div class="control">
            <button id="maze-item-add-button" class="button is-primary" disabled>Rechercher</button>
        </div>
    </div>

    {# Allows to display search result #}
    <div id="maze-item-add-result" class="hide"></div>

{% endblock %}
