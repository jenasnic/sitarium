{% extends "base.html.twig" %}

{% block body %}

    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Connexion</h1>

    <form id="login-form" action="{{ path('login_check') }}" method="post" class="card center w-half">
        <div class="field">
            <label for="username">Login</label>
            <div class="control">
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="field">
            <label for="password">Mot de passe</label>
            <div class="control">
                <input type="password" id="password" name="_password" />
            </div>
        </div>
        <div class="form-buttons">
            <button type="submit" class="button">Se connecter</button>
        </div>
        <p class="margin-top">Si vous le désirez, vous pouvez créer un compte <a href="{{ path('fo_account_new') }}">ici</a>.</p>
    </form>

{% endblock %}
