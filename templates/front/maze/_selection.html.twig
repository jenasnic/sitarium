{#
Allows to display list of maze items.
Required :
- array mazeItems : list of maze items to display (actors or movies).
- string selectionId : CSS identifier for selection container.
#}

<section id="{{ selectionId }}" class="maze-item-selection-wrapper">
    {% for mazeItem in mazeItems %}
    <div data-tmdb-id="{{ mazeItem.tmdbId }}" data-display-name="{{ mazeItem.displayName|raw }}" class="selection-item">
        <img src="{{ mazeItem.pictureUrl|tmdbPictureUrl }}" alt="{{ mazeItem.displayName|raw }}" />
        <div class="info-wrapper"><span>{{ mazeItem.displayName }}</span></div>
    </div>
    {% endfor %}
</section>
